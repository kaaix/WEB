{# templates/base/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Mon Site de Vente{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/app.css') }}">
    {% block stylesheets %}{% endblock %} {# ➕ Ajouté ce bloc ici ! #}
</head>
<body>
    <header>
        <div class="header-content">
            <img src="{{ asset('images/bandeau_haut.png') }}" alt="Bandeau haut" class="header-banner">
            <div class="header-overlay">
                <p class="uni">Université de Poitiers – Faculté des Sciences</p>
                <p class="annee">Licence 3 Informatique – Technos du Web 2<br>Année universitaire 2024-2025</p>
            </div>
        </div>
    </header>

    <nav>
        {% block menu %}{# menu dépendant du rôle utilisateur #}{% endblock %}
    </nav>

    <main>
        {% block body %}{% endblock %}
    </main>

    <footer>
        <img src="{{ asset('images/bandeau_bas.png') }}" alt="Bandeau bas" class="footer-banner">
        <div class="footer-text">
            <div class="footer-left">
                &copy; 2025 Réalisé par El Mahdi Benfdal &amp;&amp; Ewen Croizier
            </div>
            <div class="footer-center">
                Projet encadré par G. Subrenat, B. Saidi, R. Zrour
            </div>
        </div>
    </footer>

    <div class="background-logo">
        <img src="{{ asset('images/Universite_de_Poitiers.png') }}" alt="Logo UP" class="logo-fond">
    </div>
</body>
</html>
