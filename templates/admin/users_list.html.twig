{% extends 'base/site_base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin_users.css') }}">
{% endblock %}

{% block body %}
<h1>Liste des utilisateurs</h1>

{% for message in app.flashes('success') %}
    <div class="alert alert-success">{{ message }}</div>
{% endfor %}
{% for message in app.flashes('danger') %}
    <div class="alert alert-danger">{{ message }}</div>
{% endfor %}

<table class="table">
    <thead>
        <tr>
            <th>Login</th>
            <th>Mot de passe (hashé)</th>
            <th>Nom</th>
            <th>Prénom</th>
            <th>Date naissance</th>
            <th>Statut</th>
            <th>Pays</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.login }}</td>
            <td>{{ user.password }}</td>
            <td>{{ user.nom }}</td>
            <td>{{ user.prenom }}</td>
            <td>{{ user.dateNaissance ? user.dateNaissance|date('d/m/Y') : '—' }}</td>
            <td>
                {% if 'ROLE_SUPER_ADMIN' in user.roles %}
                    Super-admin
                {% elseif 'ROLE_ADMIN' in user.roles %}
                    Admin
                {% else %}
                    Client
                {% endif %}
            </td>
            <td>
                {{ user.pays ? user.pays.nom : '—' }}
            </td>
            <td>
                {% if user != app.user and 'ROLE_SUPER_ADMIN' not in user.roles %}
                    <a class="btn btn-danger"
                       href="{{ path('admin_user_delete', {'id': user.id}) }}"
                       onclick="return confirm('Êtes-vous sûr ?')">
                        Supprimer
                    </a>
                {% else %}
                    —
                {% endif %}
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
