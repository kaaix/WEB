{# templates/admin/ajouter_produit.html.twig #}
{% extends 'base/site_base.html.twig' %}

{% block title %}Ajouter un produit{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/ajouter_produit.css') }}">
{% endblock %}

{% block body %}
    <h1>Ajouter un nouveau produit</h1>

    {{ form_start(form, { 'attr': { 'class': 'ajout-produit-form' } }) }}
        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="form-group">
            {{ form_label(form.prix) }}
            {{ form_widget(form.prix) }}
            {{ form_errors(form.prix) }}
        </div>

        <div class="form-group">
            {{ form_label(form.stock) }}
            {{ form_widget(form.stock) }}
            {{ form_errors(form.stock) }}
        </div>

        <div class="form-group">
            {{ form_label(form.image) }}
            {{ form_widget(form.image) }}
            {{ form_errors(form.image) }}
        </div>

        <button type="submit">Ajouter</button>
    {{ form_end(form) }}
{% endblock %}
