{% extends 'base/base.html.twig' %}

{% block title %}Créer un utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Créer un nouvel utilisateur</h1>

        {{ form_start(form) }}
            <div class="mb-3">
                {{ form_row(form.login) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.nom) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.prenom) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.dateNaissance) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.pays) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.plainPassword, {'label': 'Mot de passe'}) }}
            </div>
            <div class="mb-3">
                {{ form_row(form.roles) }}
            </div>
            <button class="btn btn-primary">Créer l'utilisateur</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
