{% extends 'base/site_base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <h1>üõí Mon Panier</h1>

    {% if produits is empty %}
        <p>Votre panier est vide.</p>
    {% else %}
        <div class="mb-3 text-end d-flex justify-content-end gap-2">
            <form method="post" action="{{ path('client_panier_vider') }}">
                <button type="submit" class="btn btn-danger">üóëÔ∏è Vider le panier</button>
            </form>
            <form method="post" action="{{ path('client_panier_commander') }}">
                <button type="submit" class="btn btn-success">‚úÖ Commander</button>
            </form>
        </div>

        <table class="table table-bordered mt-4">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Nom</th>
                    <th>Prix unitaire</th>
                    <th>Quantit√©</th>
                    <th>Sous-total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% set total = 0 %}
                {% for produit in produits %}
                    {% set quantite = panier[produit.id]|default(0) %}
                    {% set sous_total = produit.prix * quantite %}
                    {% set total = total + sous_total %}
                    <tr>
                        <td>
                            <img src="{{ asset('images/produits/' ~ produit.image) }}"
                                 alt="{{ produit.nom }}"
                                 class="produit-image" style="max-height: 60px;">
                        </td>
                        <td>{{ produit.nom }}</td>
                        <td>{{ produit.prix|number_format(2, '.', '') }} ‚Ç¨</td>
                        <td>{{ quantite }}</td>
                        <td>{{ sous_total|number_format(2, '.', '') }} ‚Ç¨</td>
                        <td>
                            <form method="post" action="{{ path('client_panier_supprimer_produit', { id: produit.id }) }}">
                                <input type="hidden" name="_token" value="{{ csrf_token('supprimer_' ~ produit.id) }}">
                                <button type="submit" class="btn btn-sm btn-outline-danger">‚ùå Retirer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                <tr>
                    <td colspan="4" class="text-end"><strong>Total</strong></td>
                    <td colspan="2"><strong>{{ total|number_format(2, '.', '') }} ‚Ç¨</strong></td>
                </tr>
            </tbody>
        </table>
    {% endif %}
{% endblock %}
